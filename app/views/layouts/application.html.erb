<!DOCTYPE html>
<html>
<head>
  <title>Mars SMS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="assets/css/fresh-bootstrap-table.css" rel="stylesheet" />  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"> 
 <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'> 
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: 'navbar-brand' do %>
        <i class="fa fa-cogs"></i>
        Mars SMS Portal
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <div class="nav navbar-nav navbar-right">
          <% if current_user %>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary navbar-btn' %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: 'btn btn-primary navbar-btn', method: :get %>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "contact", new_contact_path %></li>
          <li><%= link_to "about", about_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
</nav>
<div class="container">
  <% flash.each do |k,v| %>
    <%= content_tag :div, v, class: "alert alert-#{k}" %>
  <% end %>
  
  <%= yield %>
</div>
</body>
</html>
